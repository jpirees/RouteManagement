@model RoutesManagement.Models.CityViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Nova</h1>

<h4>Cidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
            <br />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-light">Voltar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @if(TempData["cityFailedCreate"] != null){
        <script src="~/js/notifications/cityFailedCreate.js"></script>
    }

    @if(TempData["registerError"] != null) {
        <script src="~/js/notifications/registerErrorCreate.js"></script>
    }

    @if(TempData["citySuccess"] != null){
        <script src="~/js/notifications/citySuccess.js"></script>
    }

}

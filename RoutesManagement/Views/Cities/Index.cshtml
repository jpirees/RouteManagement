@model IEnumerable<RoutesManagement.Models.CityViewModel>

@{
    ViewData["Title"] = "Cidades";
}

<h1>Cidades</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova cidade</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
   				<td>
					<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Detalhes</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="openValidateDelete btn btn-outline-danger" data-id="@item.Id" data-content="@item.CityState" data-toggle="modal" data-target="#modalDeletePerson">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<div class="modal fade" role="dialog" id="modalDeletePerson">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Deletar</h5>
				<button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true"></span>
				</button>
			</div>
			<div class="modal-body">
				<p id="modalText"></p>
			</div>
			<div class="modal-footer">
				<a asp-action="Delete" class="btn btn-outline-danger" id="confirmDelete">Deletar</a>
				<button type="button" class="btn btn-dark" data-dismiss="modal">Cancelar</button>
			</div>
		</div>
	</div>
</div>

<script>

	$(document).on("click", ".openValidateDelete", function () {
		var cityId = $(this).data('id');
		var cityState = $(this).data('content');
		$('#modalText').html(`Deseja realmente deletar ${cityState}?`);
		$('#confirmDelete').attr('href', "/Cities/Delete/" + cityId);
	});

</script>
@*@model IEnumerable<RouteManagement.Models.FileViewModel>*@

@model string[]

@{
	ViewData["Title"] = "Rotas";

	List<string> headers = ViewBag.Headers;

	string[] services = new string[]
			{
		"INSTALAÇÃO",
		"MUDANÇA DE ENDEREÇO",
		"MUDANÇA DE LOCAL",
		"REFAZER MANUTENÇÃO",
		"REINSTALAÇÃO",
		"RETORNO CREDENCIADA",
		"SEM SINAL",
		"TROCA DE TERMINAL",
		"VISITA TÉCNICA"
			};
}

<h1>Rotas</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<h5>Escolha o Serviço</h5>
				<select name="routesServices" id="routesServices">
					@foreach (string service in services)
					{
						<option value="@service">@service</option>
					}
				</select>
			</div>

			<div class="form-group">
				<label class="control-label">Selecione os dados: </label><br />
				@foreach (var item in headers)
				{
					<input name="checkData" type="checkbox" value=@item.ToString()>

					<label for="@item.ToString()"> @item.ToString()</label>

					<br />
				}
			</div>

			<div class="form-group">
				<input type="submit" value="Gerar Documento" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
